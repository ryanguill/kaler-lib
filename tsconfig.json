{
  "compilerOptions": {
    "target": "ES2015",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "strictNullChecks": true,
    "types": ["node"],
    "rootDir": "src",
    "lib": ["es2016"],
    "typeRoots": ["node_modules/@types", "src"]
  },
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}